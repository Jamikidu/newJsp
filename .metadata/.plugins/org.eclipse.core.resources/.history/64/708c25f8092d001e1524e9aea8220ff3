package oops_p;

public class Exam {

	String name, grade;
	int [] jum;
	int tot, avg, rank;
	public Exam(String name, String ... jum) {
		super();
		this.name = name;
		this.jum = new int [jum.length];
		
		for(int i=0; i < jum.length; i++) {
			this.jum[i] = Integer.parseInt(jum[i]);
		}
	}
	
	void calc() {
		tot = 0;
		for (int i : jum) {
			tot += i;
		}
		
		avg = tot/jum.length;
		
		grade = "가가가가가가양미우수수".charAt(avg/10)+"";  //평균을 10으로 나눴을때 나오는 몫에 해당하는 문자를 제공
	}
	
}

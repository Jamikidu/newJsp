package basic_p;

import java.util.Arrays;

public class ArgsMain {

	public static void main(String[] args) {
		System.out.println("내가 argsMain 이다."+args.length);
		
		System.out.println(Arrays.toString(args));
		int even = 0;
		int even_count = 0;
		int odd = 0;
		int odd_count = 0;
		int even_avg = 0;
		int odd_avg = 0;
		int even_max = 0;
		int min = 0;
		/*for (int i=0; i<args.length; i++) {
			if(Integer.parseInt(args[i])%2 == 0) {
				sum += Integer.parseInt(args[i]);
			}
		}
		System.out.println(sum);*/
		
		
		for (String str : args) {
			try {
				int num = Integer.parseInt(str); //num은 args[i] 의 정수변환
				if(num % 2 == 0) {
					 even += num;
					 even_count ++;
				}
				else if(num % 2 == 1) {
					odd += num;
					odd_count ++;
				}
			} catch (Exception e) {
				System.out.println("문자 '" + str +"' 는 더할 수 없습니다.");
			}
			
		}
		System.out.println("짝수의 합: " + even);
		System.out.println("짝수의 평균: " + even/even_count);
		System.out.println("홀수의 합: " + odd);
		System.out.println("홀수의 평균: " + odd/odd_count);
		
		System.out.println("argsMain 끝.");
	}

}
